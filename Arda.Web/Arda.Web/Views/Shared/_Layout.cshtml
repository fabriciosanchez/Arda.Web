@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - @Localizer["PageTitle"]</title>
    <meta name="description" content="">

    <link rel="stylesheet" type="text/css" href="~/Layouts/ModernUI/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Layouts/ModernUI/css/core.css" />
    <link rel="stylesheet" type="text/css" href="~/datepicker/css/datepicker.css" />
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap-switch.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/ion.rangeSlider.css" />
    <link rel="stylesheet" type="text/css" href="~/css/ion.rangeSlider.skinHTML5.css" />
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap-multiselect.css" />
    <link rel="stylesheet" type="text/css" href="~/css/jasny-bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://getbootstrap.com/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.js"></script>

    <script src="https://d3js.org/d3.v4.min.js"></script>
    <script src="~/js/jquery.autocomplete.min.js"></script>
    <script src="~/js/bootstrap-switch.min.js"></script>
    <script src="~/js/ion.rangeSlider.min.js"></script>
    <script src="~/js/bootstrap-multiselect.js"></script>
    <script src="~/js/jasny-bootstrap.min.js"></script>
</head>
<body>
    <main class="main">
        @if (User.Identity.IsAuthenticated)
        {
            <header class="navbar navbar-arda navbar-default">
                <nav class="container-fluid">
                    <a asp-controller="Dashboard" asp-action="Index" class="navbar-brand">
                        <strong>Arda</strong> vNext
                    </a>

                    @await Html.PartialAsync("_PartialDynamicMenu")

                </nav>
            </header>
        }
        else
        {

            <header class="navbar navbar-landing navbar-fixed-top">
                <nav class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">@Localizer["Text_ToogleNavigation"]</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="navbar-landing-item"><a href="#cover">@Localizer["StaticMenu_Home"]</a></li>
                            <li class="navbar-landing-item"><a href="#about">@Localizer["StaticMenu_About"]</a></li>
                            <li class="navbar-landing-item"><a href="#getsupport">@Localizer["StaticMenu_GetSupport"]</a></li>
                            <li class="navbar-landing-item"><a href="#howto">@Localizer["StaticMenu_HowTo"]</a></li>
                            <li class="navbar-landing-item"><a href="#overview">@Localizer["StaticMenu_Overview"]</a></li>
                            <li class="navbar-landing-item"><a href="#collaboration">@Localizer["StaticMenu_Collaboration"]</a></li>
                            <li class="navbar-landing-item"><a href="#faq">@Localizer["StaticMenu_FAQ"]</a></li>
                            <li class="navbar-landing-item"><a asp-controller="Account" asp-action="SignIn"><i class="icon-user"></i></a></li>
                        </ul>

                    </div>
                </nav>
            </header>

        }

        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-xs-9">
                    <div class="media">
                        <div class="media-left">

                        </div>
                        <span class="footer-credits text-left">
                            &copy; Microsoft @DateTime.Now.Year
                        </span>
                        <a asp-controller="Home" asp-action="About" class="footer-credits-links">@Localizer["StaticMenu_About"]</a>
                        <a asp-controller="Home" asp-action="GetSupport" class="footer-credits-links"><i class="fa fa-life-ring" aria-hidden="true"></i> @Localizer["StaticMenu_GetSupport"]</a>
                        <a href="https://github.com/DXBrazil/Arda" target="_blank" class="footer-credits-links"><i class="fa fa-github" aria-hidden="true"></i> Github</a>
                        &nbsp;&nbsp;
                        <a class="footer-credits-links" href="?culture=en-US">@Localizer["EnglishWord"]</a>
                        <a class="footer-credits-links" href="?culture=pt-BR">@Localizer["PortugueseWord"]</a>

                    </div>
                </div>
                <div class="col-xs-3">
                    <img src="~/Layouts/ModernUI/img/microsoft-logo.png" class="footer-logo">
                </div>
            </div>
        </div>
    </footer>

    <!-- Modal Need Help -->
    <div id="generic-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><!-- Dynamic content --></h4>
                </div>

                <div class="modal-body">
                    <!-- Dynamic content -->
                </div>

                <div class="modal-footer">
                    <!--<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>-->
                </div>
            </div>

        </div>
    </div>
    <!-- End modal -->

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/jquery.maskMoney.min.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/js/BasicOperations.js"></script>
</body>
</html>
